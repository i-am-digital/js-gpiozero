    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-config-node": "^1.6.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsdoc": "^2.4.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.4.3",
    "mocha": "^3.2.0",
    "mocha-eslint": "^3.0.1",
    "semantic-release": "^6.3.2"
